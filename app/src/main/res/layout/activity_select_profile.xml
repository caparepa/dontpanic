<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.h2g2.dontpanic.activities.user.SelectProfileActivity">

    <RelativeLayout
        android:id="@+id/profile_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include android:id="@+id/included_app_bar_title"
            layout="@layout/view_app_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:id="@+id/select_profile_linear_layout"
            android:layout_below="@+id/included_app_bar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="8">

            <RelativeLayout
                android:id="@+id/current_profile_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">


                <TextView
                    android:id="@+id/current_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="33dp"
                    android:text="TextView"
                    tools:text="Name:" />

                <TextView
                    android:id="@+id/current_profile_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/current_profile_name"
                    android:layout_centerVertical="true"
                    android:text="TextView"
                    tools:text="Profile Id:" />

                <TextView
                    android:id="@+id/current_profile_energy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/current_profile_id"
                    android:layout_below="@+id/current_profile_id"
                    android:layout_marginTop="25dp"
                    android:text="Profile Energy:" />

                <TextView
                    android:id="@+id/current_profile_id_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/current_profile_name"
                    android:layout_centerHorizontal="true"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/current_profile_name_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/current_profile_id_val"
                    android:layout_alignTop="@+id/current_profile_id"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/current_profile_energy_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/current_profile_energy"
                    android:layout_alignEnd="@+id/current_profile_name_val"
                    android:text="TextView" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_profiles_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


    </RelativeLayout>

</layout>
